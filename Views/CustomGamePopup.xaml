<toolkit:Popup
    x:Class="MauiApp1.Views.CustomGamePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="300,400"
    Color="Beige"
   
    >
    <VerticalStackLayout Padding="20" Spacing="15">
     
        <Label Text="Righe" TextColor="SaddleBrown"/>
        <Entry x:Name="RowsEntry" Keyboard="Numeric"/>

        <Label Text="Colonne" TextColor="SaddleBrown"/>
        <Entry x:Name="ColumnsEntry" Keyboard="Numeric"/>

        <Label Text="Mine" TextColor="SaddleBrown"/>
        <Entry x:Name="MinesEntry" Keyboard="Numeric"/>

        <Button Text="Avvia Gioco" Clicked="OnConfirmClicked" TextColor="SaddleBrown"/>
    </VerticalStackLayout>
</toolkit:Popup>