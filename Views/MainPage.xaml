<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Views="clr-namespace:MauiApp1.Views"
             x:Class="MauiApp1.Views.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="#EFE5D1">

    <AbsoluteLayout>
        <Image Source="logoprojectwork.png" 
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All"               
               />
        <Label Text="Campo minato"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#6B3610"
               HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="10"  HorizontalOptions="Center" VerticalOptions="End">
                <Button Text="Facile" BackgroundColor="RosyBrown" Command="{Binding Source={RelativeSource AncestorType={x:Type Views:MainPage}}, Path=BtnFacileClickCommand}"/>
            <Button Text="Medio" BackgroundColor="RosyBrown" Command="{Binding Source={RelativeSource AncestorType={x:Type Views:MainPage}}, Path=BtnMedioClickCommand}"/>
            <Button Text="Difficile"  BackgroundColor="RosyBrown" Command="{Binding Source={RelativeSource AncestorType={x:Type Views:MainPage}}, Path=BtnDifficileClickCommand}"/>
            <Button Text="Personalizzato" BackgroundColor="RosyBrown" Command="{Binding Source={RelativeSource AncestorType={x:Type Views:MainPage}}, Path=BtnCustomClickCommand}"/>
        </HorizontalStackLayout>
    </AbsoluteLayout>
</ContentPage>